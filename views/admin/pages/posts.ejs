<!DOCTYPE html>
<html lang="en">
<% include ../partials/head %>
<body ng-app="myApp">
  <% include ../partials/header %>
  <div id="toolbar">
    <ul>
      <li><a href="/admin/editor/posts" class="color1"><i class="fa fa-plus-circle"></i>New post</a></li>
    </ul>
  </div>
  <main ng-controller="postsCtrl">
  <h1>Posts</h1>

  <div>
    <ul>
      <li ng-repeat="post in posts"><a ng-href="/admin/editor/posts/{{post._id}}">{{post.title}}</a>&nbsp;[<a href="#" ng-click="deletePost(post._id)">delete</a>]</li>
    </ul>
  </div>
    
  </main>
</body>
</html>
